<h1>Bills</h1>
<% @bills.each do |bill| %>
  <h2><%= bill.title %></h2>
  <h2><%= bill.due_at %></h2>
  <h2><%= bill.amount %></h2>
  <h2><%= bill.is_paid %></h2>
  <%= link_to 'Bill', bill_path(bill.id) %>
  <%= link_to 'Delete', bill_path(bill.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'New Bill', new_bill_path %>